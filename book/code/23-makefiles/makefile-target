docker: python 
   echo "Building with docker-compose"
   docker-compose build devsecops
   @docker-compose run devsecops /bin/bash

python: ## setup python3
   if [! -f /.dockerenv ]; then \
	echo "Run make python inside docker container" && exit 1; fi
   echo "Set up the Python environment"
   if [ -f 'python/requirements.txt' ]; then \
	python -m pip install -rpython/requirements.txt; fi
